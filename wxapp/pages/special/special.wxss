/* pages/special/special.wxss */
page{
  background-color: #fff;
}
.special-top{
  position: relative;
}
.special-top-bg-img{
  height: 750rpx;
}
.special-top-bg-img image{
  height: 100%;
  width: 100%;
}
.special-top-play{
  font-size: 10pt;
  color: #6d6c6a;
   padding: 24rpx 40rpx; 
}
.special-top-play view{
  padding-right: 24rpx;
}
.special-top-play text{
  color: #fff;
}
.special-top-title{
  color: #fff;
  font-size: 13pt;
  font-weight: 600;
  padding: 40rpx;
   border-bottom: 1rpx solid #8e8e8e; 
}
.float-box{
  position: absolute;
  bottom: 0;
  z-index: 999;
  width: 100%;
}
.float-box-mask{
  position: absolute;
  bottom: 0;
  background-color: #222222;
  width: 100%;
  height: 100%;
  opacity: 0.7;
  z-index: -1;
}
.special-play{
  padding: 40rpx;
  background-color: #fff;
  color: #c8c5c0;
  font-size: 12pt;
  height: 80rpx;
}
.special-play image{
  width: 56rpx;
  height: 56rpx;
  margin-right:60rpx; 
}
.special-share{
  background-color: #fff;
  border: 0;
}
button::after {
  content:normal;
}
.special-share image{
  margin-right:12rpx; 
}
.details{
  background-color: #fff;
  padding: 24rpx;
  overflow-x:hidden; 
}
.label-item{
  display: inline-block;
  height: 50rpx;
  border-radius: 25rpx;
  border: 1rpx solid #00C4CD;
  padding: 0 18rpx;
  margin:0 10rpx;
  color: #00C4CD;
  font-size: 11pt;
  line-height: 50rpx;
}
.label-list{
  padding: 24rpx;
}