.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  border-top:1rpx solid #e2e2e2;
  /* padding: 24rpx 0; */
  height: 100rpx;
  background-color: #fff;
}
.footer button{
  background-color: #fff;
}
.footer image{
  height: 42rpx;
  width: 42rpx;
}
.footer-post{
  padding: 0 24rpx;
  margin: 0 24rpx;
  background-color: #f5f5f5;
  height: 70rpx;
  border-radius: 10rpx;
  font-size: 11pt;
  color: #919191;
}
.footer-item{
   position: relative; 
   height: 100%;
   width: 70rpx;
   padding: 0;
}
.footer-item view{
  color: #323232;
  font-size: 9pt;
  position: absolute;
  top: 20rpx;
  right:0;
  width:80rpx;
  text-align:center;
}



.comment-play{
  /* padding: 24rpx 0; */
  border-top: 1rpx solid #e2e2e2;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999;
  width: 100%;
  height: 100rpx;
}
.comment-input input{
  font-size: 10pt;
  color: #222;
  padding:0 24rpx; 
  width: 100%;
  height: 100%;
}
.comment-input{
  height: 100%;
}
.comment-input-class{
  font-size: 10pt;
