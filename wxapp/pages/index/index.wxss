/* pages/list/list.wxss */
.choice-item{
  padding: 24rpx 24rpx 0 24rpx;
  /* margin: 24rpx 0; */
  background-color: #fff;
  border-bottom: 1rpx solid #e2e2e2;
}
.choice-item-right image{
  /* width: 260rpx;
  height:200rpx; */
  height: 140rpx;
  width: 200rpx;
}
.choice-item-title{
  color: #222;
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  max-height: 120rpx;
}
.choice-item-smail{
  font-size: 10pt;
  color: #757575;
  max-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  width: 100%;
  margin-top: 10rpx;
}
.choice-user-pic image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 10rpx;
}
.choice-user-name{
  font-size: 10pt;
  margin-right: 10rpx;
  color: #00c4cd;
}
.choice-user-level{
  font-size: 7pt;
  color: #8e8e8e;
}
.choice-user-right{
  font-size: 7pt;
  color: #555555;
}
.choice-user{
  margin-bottom: 18rpx;
}
.choice-item-left{
  margin-right: 24rpx;
}
.choice-play image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.choice-play{
  font-size: 8pt;
   /* height: 80rpx;
  border-top: 1rpx solid #eaedee;
  margin-top:20rpx;  */
  padding: 24rpx 0;
}
.choice-play view{
  margin-right: 24rpx;
}
 /* 底部加载动画 */
.show-loading image{
  height: 40rpx;
  width: 100%;
  padding: 30rpx 0;
  background-color: #ffffff;
}
.show-no-content{
  font-size: 10pt;
  color: #8e8e8e;
  padding: 30rpx 0;
  background-color: #fff;
}